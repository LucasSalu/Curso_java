
public class Matriz {
	int[][] matriz;

	public Matriz(int[][] matriz) {
		this.matriz = matriz;
	}

	public void down(int lin, int col) {
        	if(matriz.length >= lin+1) {
        		if (matriz[lin+1].length >= col) {
        			System.out.printf("Down: ", matriz[lin+1][col]);
        		}
        	}
	}
	public void up(int lin, int col) {
		if (0 <= lin - 1) {
			if (matriz[lin - 1].length >= col) {
				System.out.printf("Down: ", matriz[lin + 1][col]);
			}
		}

	}
	public void left(int lin, int col) {
		if (lin >= 0 && lin <= matriz.length) {
			if (matriz[lin].length <= col && col >=0) {
				System.out.printf("Down: ", matriz[lin + 1][col]);
			}
		}

	}
}
